 <div class="row">
    <div class="col-md-1 col-sm-2 col-xs-3 price">
      <h3>$<%= @product.price/100 %></h3>
    </div>
    <div class="col-md-6 col-md-offset-1 col-sm-6 col-sm-offset-1 col-sm-8 col-xs-offset-1">
      <h3><%= @product.name %></h3>
    </div>
  
  
  </div>

  <br>

  <div class="row product-info">
    <div class="col-md-4  col-sm-6">
      <%= image_tag(@product.image_url, width: "350", :class => 'img-zoom', data_zoom_image: @product.image_url) %>
    </div>
    <div class="col-md-3 col-sm-6">
      <p><%= @product.description %></p><br>
      <p><em>Color:</em> <%= @product.color %></p>
      <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div></p>
      <br>
      <%= form_tag "/payments/new" do %>
        <%= render partial: "shared/stripe_checkout_button" %>
        <%= hidden_field_tag(:product_id, @product.id) %>
      <% end %>
    </div>
  </div>

  <hr>

