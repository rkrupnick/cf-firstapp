<h1>Our Products</h1>

<div class="row">
  <div class="col-md-2">
    <h3>Name</h3>
  </div>
  <div class="col-md-3">
    <h3>Description</h3>
  </div>
  <div class="col-md-3">
    <h3>Image URL</h3>
  </div>
  <div class="col-md-2">
    <h3>Color</h3>
  </div>
</div>

<% @products.each do |product| %>
  <div class="row">
    <div class="col-md-2">
      <p><%= product.name %></p>
    </div>
    <div class="col-md-3">
      <p><%= product.description %></p>
    </div>
    <div class="col-md-3">
      <p><%= product.image_url %></p>
    </div>
    <div class="col-md-2">
      <p><%= product.color %></p>
    </div>
    <div class="col-md-2">
      <%= link_to 'Show', product %>
      <%= link_to 'Edit', edit_product_path(product) %>
      <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
  <br>
<% end %>

<br>

<%= link_to 'New Product', new_product_path %>
